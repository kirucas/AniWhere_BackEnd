<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace속성:매퍼파일의 완전한경로 .xml는 생략 -->
<!-- ※ibatis와는 다르게 id값에 .(dot)를 사용 못한다. -->
<mapper namespace="mybatis.AllComment">

	<select id="commentSelectList" parameterType="java.util.Map" resultType="CommentDTO">
		SELECT tn.*, mem_nickname
		FROM ${table_name} tn JOIN member mb ON tn.mem_no = mb.mem_no
		WHERE origin_no = #{origin_no}
		ORDER BY cmt_no
	</select>
	
	<insert id="commentInsert" parameterType="java.util.Map">
		INSERT INTO ${table_name}(cmt_no, origin_no, mem_no, cmt_content)
		VALUES(seq_${table_name}.nextval, #{no}, #{mem_no}, #{cmt_content})
	</insert>
	
	<update id="commentUpdate" parameterType="java.util.Map">
		UPDATE ${table_name}
		SET cmt_content=#{cmt_content}
		WHERE cmt_no=#{cmt_no}
	</update>
	
	<delete id="commentDelete" parameterType="java.util.Map">
		DELETE FROM ${table_name}
		WHERE cmt_no=#{cmt_no}
	</delete>
	
	<delete id="commentDeleteAll" parameterType="java.util.Map">
		DELETE FROM ${table_name}
		WHERE origin_no=#{no}
	</delete>
	
	<select id="commentCount" parameterType="java.util.Map">
		SELECT COUNT(*)
		FROM ${table_name}
		WHERE origin_no=#{no}
	</select>
	
</mapper>