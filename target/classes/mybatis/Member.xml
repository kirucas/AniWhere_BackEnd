<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace속성:매퍼파일의 완전한경로 .xml는 생략 -->
<!-- ※ibatis와는 다르게 id값에 .(dot)를 사용 못한다. -->
<mapper namespace="mybatis.Member">

	<select id="memberCheck" parameterType="java.util.Map" resultType="int">
		SELECT COUNT(*)
		FROM member
		WHERE mem_id=#{mem_id} AND mem_pw=#{mem_pw}
	</select>
	
	<select id="memberCount" parameterType="java.util.Map" resultType="int">
		SELECT COUNT(*)
		FROM member
	</select>
	
	<select id="memberSelectList" parameterType="java.util.Map" resultType="MemberDTO">
		SELECT *
		FROM member
		ORDER BY mem_no;
	</select>
	
	<select id="memberSelectOne" parameterType="java.util.Map" resultType="MemberDTO">
		SELECT *
		FROM member
		<if test="mem_no != null">
			WHERE mem_no=#{mem_no}
		</if>
		<if test="mem_id != null">
			WHERE mem_id=#{mem_id}
		</if>
	</select>
	
	<insert id="memberInsert">
		INSERT INTO member
		VALUES(seq_member.nextval, 
				#{mem_id},
				#{mem_pw}, 
				#{mem_name}, 
				#{mem_nickname}, 
				#{mem_gender}, 
				#{mem_birth}, 
				#{mem_loc}, 
				#{mem_log}, 
				#{mem_interani})
	</insert>
	
	<update id="memberUpdate">
		UPDATE member
		SET mem_id=#{mem_id}, mem_name=#{mem_name}, mem_nickname=#{mem_nickname}, mem_gender=#{mem_gender}, mem_birth=#{mem_birth}, mem_loc=#{mem_loc}, mem_interani=#{mem_interani}
		WHERE mem_no=#{mem_no}
	</update>
	
	<delete id="memberDelete">
		DELETE member
		WHERE mem_no=#{mem_no}
	</delete>
	
</mapper>